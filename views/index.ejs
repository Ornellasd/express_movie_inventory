<!DOCTYPE html>
<html>
  <%- include('partials/head.ejs') %>
  <body>
    <%- include('partials/navbar.ejs') %>
    <main role="main">
      <div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
            <% movies.forEach((movie) => {%>
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="images/no_image.jpg" alt="Card image cap">                
                <div class="card-body">
                  <h5 class="card-title"><%= movie.title %></h5>
                  <a href="<%= movie.genre.url %>"><%= movie.genre.name %></a>
                </div>
                <div class="card-footer">
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a href="<%= movie.url %>" class="btn btn-sm btn-outline-secondary">View</a>
                      <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                    </div>
                    <%= movie.cost_formatted %>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
          </div>

        </div>
      </div>
    </main>
    <%- include('partials/footer.ejs') %>
  </body>

</html>
