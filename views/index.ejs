<!DOCTYPE html>
<html>
  <%- include('partials/head.ejs') %>
  <body>
    <%- include('partials/navbar.ejs') %>
    <main role="main">
      <div class="album py-5">
        <div class="container">
          <h3 class="text-center"><%= title %></h3>
          <div class="row">
            <% if(movies.length !== 0) { %>
              <% movies.forEach((movie) => { %>
                <div class="col-md-4">
                  <div class="card mb-4 box-shadow">
                    <% if(movie.image) {%>
                      <img class="card-img-top" src="<%= movie.image %>" alt="Card image cap">
                    <% } else { %>
                      <img class="card-img-top" src="/images/no_image.jpg" alt="Card image cap">
                    <% } %>
                    <div class="card-body">
                      <h5 class="card-title"><%= movie.title %></h5>
                      <a href="<%= movie.genre.url %>"><%= movie.genre.name %></a>
                    </div>
                    <div class="card-footer">
                      <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                          <a href="<%= movie.url %>" class="btn btn-sm btn-outline-secondary">View</a>
                        </div>
                        <%= movie.cost_formatted %>
                      </div>
                    </div>
                  </div>
                </div>
              <% }) %>
            <% } else { %>
              <h5>No movies :(</h5>
            <% } %>
          </div>
        </div>
      </div>
    </main>
    <%- include('partials/footer.ejs') %>
  </body>

</html>
